    $("#login").click(function (event) {
        //udtl dvmsg
        $("#udtl").show();
        $("#dvmsg").hide();
        $("#txtUserName").val("");
        $("#pmsg").html("");
        $("#dialog").dialog("open");
        event.preventDefault();
    });
